-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.ResetOnSpawn = false -- Ensure the GUI does not disappear on death
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create a Frame to hold buttons
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 250) -- Set size to 250x250 pixels
frame.Position = UDim2.new(0.25, 0, 0.25, 0)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50) -- Dark background
frame.BorderSizePixel = 0 -- Remove border
frame.Parent = screenGui

-- Add a UIStroke to the frame for a border effect
local uiStroke = Instance.new("UIStroke")
uiStroke.Color = Color3.fromRGB(255, 255, 255) -- White border
uiStroke.Thickness = 2 -- Border thickness
uiStroke.Parent = frame

-- Add a UICorner to round the corners of the frame
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0.1, 0) -- Rounded corners
uiCorner.Parent = frame

-- Create a Title
local title = Instance.new("TextLabel")
title.Name = "Title"
title.Text = "Celleron Loader"
title.Size = UDim2.new(1, 0, 0.1, 0)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 24
title.Parent = frame

-- Function to create a button
local function createButton(name, text, position, action)
    local button = Instance.new("TextButton")
    button.Name = name
    button.Text = text
    button.Size = UDim2.new(0.8, 0, 0.1, 0)
    button.Position = position
    button.BackgroundColor3 = Color3.fromRGB(100, 100, 100) -- Button color
    button.TextColor3 = Color3.fromRGB(255, 255, 255) -- Text color
    button.Font = Enum.Font.SourceSansBold -- Bold font
    button.TextSize = 20 -- Text size
    
    -- Add a UICorner to round the corners of the button
    local buttonUICorner = Instance.new("UICorner")
    buttonUICorner.CornerRadius = UDim.new(0.1, 0) -- Rounded corners
    buttonUICorner.Parent = button
    
    button.Parent = frame
    button.MouseButton1Click:Connect(action)
end

-- Make the frame draggable
local dragToggle = nil
local dragStart = nil
local startPos = nil

local function updateInput(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragToggle = true
        dragStart = input.Position
        startPos = frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragToggle = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        input = input
    end
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if dragToggle then
        updateInput(input)
    end
end)

-- Example buttons
createButton("Button1", "Papers Pls", UDim2.new(0.1, 0, 0.2, 0), function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/ghostofcelleron/Scripts/refs/heads/main/Papers%20Pls",true))()
end)

createButton("Button2", "Stateview Prison", UDim2.new(0.1, 0, 0.4, 0), function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/ghostofcelleron/Scripts/refs/heads/main/Stateview%20Prison",true))()
end)

createButton("Button2", "Stateview Prison", UDim2.new(0.1, 0, 0.6, 0), function()
loadstring(game:HttpGet("https://raw.githubusercontent.com/ghostofcelleron/Scripts/refs/heads/main/Flee%20The%20Facility",true))()
end)
